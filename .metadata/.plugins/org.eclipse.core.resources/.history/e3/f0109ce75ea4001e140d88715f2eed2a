package sub3;

/*
 * 날짜 : 2023/12/27
 * 이름 : 김광은
 * 내용 : Java 조건문 switch 실습하기
 */

public class ForTest {
		public static void main(String[] args) {
			
			// for
			for(int i = 1; i <= 5; i++) {
				System.out.println("i : " + i);
			}
			
			// 1부터 10까지 합
			int sum = 0;
			for(int k = 1; k <=10; k++) {
				sum += k;
			}
			System.out.println("sum : " + sum);
			
			
			// 1부터 10까지 짝수합
			int tot = 0 ;
			for(int k = 1; k <=10 ; k++) {
				if(k % 2 ==0) {
					tot += k;
				}
			}
			System.out.println("tot : " + tot);
			
			// for중첩
			for(int a=1; a<=3; a++) {
				System.out.println("a : " + a);
				for(int b=1; b<=5; b++) {
					System.out.println("b : " + b);
				}
			}
			
			// 구구단
			
			for(int c=1; c<=9; c++) {
				System.out.print("\n");
				for(int d=1; d<=9; d++) {
					int r = c * d;
					System.out.println(c+ " * " +d+ " = " + r);
				}
			}
			// 별삼각형
			
			
			
		}
}
